---
import AppBar from "../components/AppBar.astro";

const { frontmatter } = Astro.props;
---

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>aloussase | {frontmatter.title}</title>
  </head>
  <body>
    <header class="w-4/5 md:w-2/3 mx-auto p-4">
      <AppBar />
      <h1 class="text-2xl font-bold mt-4 text-center">
        {frontmatter.title}
      </h1>
    </header>
    <main class="w-4/5 md:w-2/3 mx-auto p-4">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  ol li {
    list-style: alpha;
    padding-top: 1rem;
    font-size: 1.2rem;
  }
</style>
